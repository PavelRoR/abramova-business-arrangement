#plan
	padding-top: 100px
.plan-block
	background-color rgba(#fff, .7)
	padding 0 100px 0 60px
	margin-bottom: 25px
	@media screen and (max-width 1199px)
		padding 0 60px 0 30px
	@media screen and (max-width 991px)
		padding 0 30px
	&-title
		padding 15px 0
		display flex
		align-items: center
		position relative
		cursor pointer
		@media screen and (max-width 991px)
			display block
			text-align: left
		&:before
			content: ''
			width 46px
			height: 46px
			background-image: url(../img/icons/close.svg)
			background-repeat: no-repeat
			background-position: center
			background-size: cover
			position absolute
			top calc(50% - 23px)
			right -70px
			transition: all .3s ease-in-out
			@media screen and (max-width 1199px)
				right: -30px
			@media screen and (max-width 991px)
				width 20px
				height: 20px
				right 0
				top 20px
		&-num
			width 165px
			color #FE7D3B
			text-align center
			padding-right: 50px
			margin-right: 50px
			border-right: 3px solid #4F5F76
			@media screen and (max-width 1199px)
				padding-right: 25px
				margin-right: 25px
			@media screen and (max-width 991px)
				width 100%
				text-align: left
				padding-right: 0
				padding-bottom: 10px
				margin-right: 0
				margin-bottom: 10px
				border-right: 0
				position relative
				&:before
					content: ''
					display block
					position absolute
					width 80px
					height: 3px
					background-color #4F5F76
					left 0
					bottom: 0
			p
				font-family: G
				font-size: 60px
				line-height: 1
				text-transform uppercase
				@media screen and (max-width 991px)
					font-size: 28px
				small
					font-family: N
					font-size: 20px
					font-weight: bold
					display block
					@media screen and (max-width 991px)
						padding-right: 5px
						display inline-block
						font-size: 28px
		&-name
			width calc(100% - 270px)
			@media screen and (max-width 991px)
				width 100%
			h5
				color #4F5F76
				font-size: 28px
				line-height: 1.1
				@media screen and (max-width 991px)
					font-size: 24px
.plan-block-title.active
	.plan-block-title-name h5
		font-weight: bold
	&:before
		transform: rotate(45deg)
.plan-block-info
	display none
	padding 25px 0 40px
	&-text
		margin-bottom: 20px