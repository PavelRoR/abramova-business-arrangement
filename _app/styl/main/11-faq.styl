#faq
	padding 90px 0
	@media screen and (max-width 991px)
		padding 0 0 60px
	@media screen and (max-width 650px)
		padding 0 0 40px
.faq-item
	margin-bottom: 20px
	border: 2px solid #000
	padding 0 60px 0 100px
	@media screen and (max-width 991px)
		padding 0 20px 0 0
		margin-bottom: 10px
	&-title
		padding 20px 0
		display flex
		align-items: center
		position relative
		cursor pointer
		@media screen and (max-width 991px)
			padding 15px 20px 15px 60px
		@media screen and (max-width 386px)
			padding 15px 20px 15px 40px
		&:before
			content: ''
			width 46px
			height: 46px
			background-image: url(../img/icons/close.svg)
			background-repeat: no-repeat
			background-position: center
			background-size: cover
			position absolute
			top calc(50% - 23px)
			left -70px
			transition: all .3s ease-in-out
			@media screen and (max-width 991px)
				width 20px
				height: 20px
				top calc(50% - 10px)
				left 10px
			@media screen and (max-width 386px)
				left 10px
		h4
			font-size: 24px
			font-weight: bold
			line-height: 1.2
			@media screen and (max-width 991px)
				font-size: 20px
	&-info
		display none
		padding 25px 0 40px
		font-size: 24px
		line-height:  1.2
		@media screen and (max-width 991px)
			padding 15px 20px
			font-size: 16px
		&-text
			margin-bottom: 20px
.faq-item-title.active
	&:before
		transform: rotate(45deg)
.faq-note
	font-size: 14px
	margin-top: 35px
	@media screen and (max-width 991px)
		margin-top: 25px