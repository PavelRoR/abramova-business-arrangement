#faq
	padding 90px 0
.faq-item
	margin-bottom: 20px
	border: 2px solid #000
	padding 0 60px 0 100px
	&-title
		padding 20px 0
		display flex
		align-items: center
		position relative
		cursor pointer
		&:before
			content: ''
			width 46px
			height: 46px
			background-image: url(../img/icons/close.svg)
			background-repeat: no-repeat
			background-position: center
			background-size: cover
			position absolute
			top 12px
			left -70px
			transition: all .3s ease-in-out
		h4
			font-size: 24px
			font-weight: bold
			line-height: 1.2
	&-info
		display none
		padding 25px 0 40px
		font-size: 24px
		line-height:  1.2
		&-text
			margin-bottom: 20px
.faq-item-title.active
	&:before
		transform: rotate(45deg)
.faq-note
	font-size: 14px
	margin-top: 35px