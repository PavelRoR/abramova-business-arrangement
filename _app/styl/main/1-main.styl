#main
	padding 0 0 360px
	@media screen and (max-width 991px)
		text-align center
		padding 0 0 70px
.main
	&-img
		position absolute
		top -740px
		right -1450px
		z-index -1
		@media screen and (max-width 1199px)
			right -1600px
		&-mob
			display block
			width 100%
			max-width 350px
			margin 0 auto -50px
	&-pre
		display inline-block
		font-size: 20px
		padding 5px 40px
		border-radius: 24px
		border: 2px solid #4F5F76
		text-transform uppercase
		line-height: 1
		@media screen and (max-width 1199px)
			font-size: 24px
		@media screen and (max-width 991px)
			font-size: 20px
		@media screen and (max-width 560px)
			font-size: 16px
			padding 5px 20px
	&-title
		font-family: G
		font-size: 65px
		color #2C3E54
		text-transform uppercase
		line-height: 1.2
		@media screen and (max-width 991px)
			font-size: 56px
		@media screen and (max-width 560px)
			font-size: 42px
		@media screen and (max-width 386px)
			font-size: 36px
		small
			display block
			font-family: N
			font-size: 28px
			@media screen and (max-width 991px)
				font-size: 22px
	&-subtitle
		font-size: 20px
		color #4F5F76
		text-transform uppercase
		width 100%
		max-width 420px
		margin 50px 0
		line-height: 1.3
		@media screen and (max-width 991px)
			font-weight: bold
			font-size: 20px
			padding: 15px
			border-radius: 10px
			background-color rgba(#fff,.7)
			text-transform none
			margin 0 auto
			color #2C3E54
			position relative
	&-date
		display flex
		flex-direction: row
		align-items: center
		justify-content: space-between
		width 100%
		max-width 380px
		margin-bottom: 50px
		@media screen and (max-width 991px)
			margin 20px auto
		p
			font-size: 20px
			font-weight: bold
			color #4F5F76
			@media screen and (max-width 991px)
				font-size: 18px
.button-wrapper-main
	@media screen and (max-width 991px)
		text-align center
.main-img-back-mob-1
	@media screen and (max-width 991px)
		display block
		position absolute
		top: 70px
		left -30px
#what
	padding 0
	margin-bottom: -300px
	@media screen and (max-width 1199px)
		margin-bottom: -200px
	@media screen and (max-width 991px)
		margin-bottom: 0
		padding-bottom: 90px
	@media screen and (max-width 560px)
		padding 0 0 60px
.what-img
	display block
	width 100%
	max-width 580px
	margin 0 auto
	@media screen and (max-width 991px)
		margin-bottom: 25px
.what-info
	h4
		font-size: 28px
		@media screen and (max-width 991px)
			font-size: 24px
	p:first-of-type
		margin: 30px 0
