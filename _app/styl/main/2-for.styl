.for-item
	margin-bottom: 90px
	@media screen and (max-width 991px)
		margin-bottom: 40px
	&-title
		font-size: 28px
		color #4F5F76
		position relative
		margin-bottom: 20px
		padding-bottom: 16px
		@media screen and (max-width 991px)
			font-size: 24px
		&:before
			content: ''
			display block
			position absolute
			bottom: 0
			left 0
			background-color: #FE7D3B
			height: 4px
			width 70px
	&-text
		span
			font-family: G