#author
	padding 100px 0
.general-title-author
	position relative
	margin-bottom: -45px
	@media screen and (max-width 991px)
		margin-bottom: 20px
		padding-bottom: 28px
		text-align: left
		h3
			text-align center
			// display block
		span
			left 0
			text-align: left
	&:after
		content: ''
		display block
		position absolute
		left 0
		right 0
		bottom: -20px
		margin 0 auto
		width 100%
		max-width 780px
		height: 3px
		background-color: #FE7D3B
		@media screen and (max-width 991px)
			bottom: 0
.author-info
	display flex
	flex-wrap: wrap
	flex-direction: row
	justify-content: space-between
	align-items: flex-start
	@media screen and (max-width 991px)
		display block
	.author-info-img-1
	.author-info-best
		width 40%
	.author-info-img-1
		@media screen and (max-width 991px)
			display block
			width 100%
			max-width 466px
			margin 30px 0
	.author-info-best
		@media screen and (max-width 991px)
			width auto
.author-info-img-1
	display inline-block
	// width 100%
	// max-width 466px
	margin-bottom: 60px
.author-info-img-2
	display inline-block
	width 55%
	margin: -60px 0 80px
	@media screen and (max-width 1199px)
		margin 5px 0 80px
	@media screen and (max-width 991px)
		display none
.author-info-best
	font-size: 28px
	font-weight: bold
	color #fff
	padding 50px 20px
	background-color: #2C3E54
	display inline-block
	text-align center
	@media screen and (max-width 1199px)
		margin-top: -120px
	@media screen and (max-width 991px)
		width auto
		margin 0 0 50px
.author-info-text
	width 55%
	@media screen and (max-width 991px)
		width 100%
	p
		font-size: 28px
		margin: 100px 0 25px
		text-transform uppercase
	ul
		list-style none
		font-size: 24px
		li
			margin-bottom: 15px
	&-mob
		font-size: 24px
		text-transform uppercase
		text-align center
		display block
.cert-text
	width 100%
	max-width 784px
	margin 100px auto 60px
	text-align center
	padding 36px 36px 0
	border-top: 3px solid #FE7D3B
	font-size: 24px
	text-transform uppercase
	@media screen and (max-width 991px)
		padding 20px 0 0
	span
		font-weight: bold
	small
		display block
		text-transform none
		@media screen and (max-width 991px)
			font-size: 20px
			margin 40px 0
.cert-img
	display block
	width 100%
	max-width 959px
	margin 0 auto