#author
	padding 100px 0
.general-title-author
	position relative
	margin-bottom: -45px
	&:after
		content: ''
		display block
		position absolute
		left 0
		right 0
		bottom: -20px
		margin 0 auto
		width 100%
		max-width 780px
		height: 3px
		background-color: #FE7D3B
.author-info
	display flex
	flex-wrap: wrap
	flex-direction: row
	justify-content: space-between
	align-items: flex-start
	.author-info-img-1
	.author-info-best
		width 40%
.author-info-img-1
	display inline-block
	// width 100%
	// max-width 466px
	margin-bottom: 60px
.author-info-img-2
	display inline-block
	width 55%
	margin: -60px 0 80px
.author-info-best
	font-size: 28px
	font-weight: bold
	color #fff
	padding 50px 20px
	background-color: #2C3E54
	display inline-block
	text-align center
.author-info-text
	width 55%
	p
		font-size: 28px
		margin: 100px 0 25px
		text-transform uppercase
	ul
		list-style none
		font-size: 24px
		li
			margin-bottom: 15px
.cert-text
	width 100%
	max-width 784px
	margin 100px auto 60px
	text-align center
	padding 36px 36px 0
	border-top: 3px solid #FE7D3B
	font-size: 24px
	text-transform uppercase
	span
		font-weight: bold
	small
		display block
		text-transform none
.cert-img
	display block
	width 100%
	max-width 959px
	margin 0 auto