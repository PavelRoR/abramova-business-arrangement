#prices
	padding 90px 0
.packet
	background-color: #2C3E54
	color #fff
	@media screen and (max-width 991px)
		width 100%
		max-width 367px
		margin 0 auto 20px
	&-head
		height: 140px
		display flex
		align-items: center
		justify-content: center
		padding 0 40px
		text-align center
		@media screen and (max-width 1199px)
			height: 180px
		@media screen and (max-width 991px)
			height: auto
			padding 40px 20px
		h4
			font-size: 28px
			font-weight: bold
			text-transform uppercase
			color #FE7D3B
	&-body
		padding 15px
		border-top: 2px solid #FE7D3B
		border-bottom: 2px solid #FE7D3B
		min-height 680px
		@media screen and (max-width 1199px)
			min-height 780px
		@media screen and (max-width 991px)
			min-height 1px
		&-text
			text-align center
			margin-bottom: 15px
			font-weight: bold
		&-list
			li
				margin-bottom: 20px
				position relative
				list-style none
				padding-left: 15px
				&:last-child
					margin-bottom: 0
				&:before
					content: ''
					display block
					position absolute
					top 12px
					left 0
					border-radius: 50%
					background-color #fff
					width 3px
					height: 3px
				&.absence
					text-decoration: line-through
					color #919294
	&-footer
		padding 15px 60px
		text-align center
		color #FE7D3B
		@media screen and (max-width 1199px)
			padding 15px 20px
		@media screen and (max-width 991px)
			padding 15px 20px 30px
.packet.packet-orange
	background-color: #DC692F
	.packet-head
		h4
			color #2C3E54
			span
				display block
				text-transform none
				color #fff
	.packet-body
		padding 15px
		border-top: 2px solid #2C3E54
		border-bottom: 2px solid #2C3E54
.cost
	margin-bottom: 15px
	font-size: 28px
	font-weight: bold
	color #FE7D3B
	@media screen and (max-width 425px)
		font-size: 24px
	&-full
		color #767F8D
		text-decoration: line-through
.cost-text
	margin-bottom: 15px
.packet.packet-orange
	.cost-text
		color #2C3E54
	.cost
		color #2C3E54
		&-full
			color #fff