#revs
	padding 90px 0
	background-color: #FFDABF
	@media screen and (max-width 991px)
		padding 60px 0
	@media screen and (max-width 386px)
		padding 40px 0
.revs-slider-text
	width 88%
	margin 0 auto
	@media screen and (max-width 767px)
		width 100%
	@media screen and (max-width 560px)
		padding 50px 0
.slick-list
	border-radius: 15px
.text-rev-wrap
	border-radius: 23px
	padding: 20px
	display flex
	align-items: center
	justify-content: center
	width 488px
	height: 444px
	background-image: linear-gradient(135deg, #A0C192 0%, #AAC99D 40%, #79A068 100%)
	margin 0 auto
	@media screen and (max-width 1199px)
		width 400px
	@media screen and (max-width 560px)
		width auto
		height: 322px
		padding 10px
.text-rev-img
	width auto
	max-width: 100%;
	max-height: 100%
