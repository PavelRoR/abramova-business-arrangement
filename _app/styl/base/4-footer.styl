footer
	background-color #2C3E54
	padding 60px 0 40px
	font-size: 18px
	color #fff
	.&-logo
		width 190px
		@media screen and (max-width 991px)
			margin: 30px 0
	@media screen and (max-width 991px)
		padding: 30px 0
		font-size: 14px
	a
		color #fff
		&:focus
		&:hover
			color #fff
	.&-main
		padding 23px 0 32px
		border-top: 1px solid #FE7D3B
		border-bottom: 1px solid #FE7D3B
	p
		margin-bottom: 15px
		&:last-of-type
			margin-right: 0
	.&-links
		margin-top: 15px
		text-align center
		color #C4C3C3
		a
			color #fff
			display inline-block
			margin-bottom: 5px
			font-size: 16px
			@media screen and (max-width 991px)
				font-size: 14px
.footer-info-item
	margin-top: 20px
	@media screen and (max-width 991px)
		margin-top: 10px
	p
		margin-bottom: 5px