header
	overflow hidden
	padding 10px 0
	margin-bottom: 40px
	position relative
	z-index 50
	@media screen and (max-width 991px)
		text-align: left
		margin-bottom: 20px
.header-logo
	float left
	width 118px
	height: auto
	@media screen and (max-width 991px)
		float: none
		width 90px
.header-menu
	float: right
	text-align center
	margin-top: 8px
	li
		display inline-block
		list-style: none
		margin-left: 50px
		@media screen and (max-width 1199px)
			margin-left: 10px
		@media screen and (max-width 991px)
			text-align left
			display none
		&:first-child
			margin-left: 0
		a
			font-size: 16px
			display block
			color #6C6B6B
			&:focus
			&:hover
				color #6C6B6B
.fixed
	position fixed